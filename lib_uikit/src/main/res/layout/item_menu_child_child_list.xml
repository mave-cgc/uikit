<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemMenuChildRlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/itemMenuChildChildFl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_menu_child_child_bg"
        android:padding="11dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/itemMenuChildRlv">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemMenuChildChildRlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>